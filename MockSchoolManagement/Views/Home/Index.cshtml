@model IEnumerable<Student>

@{
    ViewBag.Title = "学生列表页面";
}
<div class="card-deck">
    @foreach (var student in Model)
    {
        var photoPath = "/images/avatars/" + (student.PhotoPath ?? "noimage.png");
        <div class="card m-3">
            <div class="card-header">
                <h3 class="card-title">@student.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"/>
            <div class="card-body text-center">
                <h5 class="card-title">主修科目:@student.Major.GetDisplayName()</h5>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" class="btn btn-primary m-1" asp-action="Details" asp-route-id="@student.EncryptedId">查看</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@student.EncryptedId" class="btn btn-primary m-1">编辑</a>
                <a href="#" class="btn btn-danger m-1">删除</a>
            </div>
        </div>
    }
</div>

